<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>

    <uses-sdk
        android:maxSdkVersion="14"
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lhueagle"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.app.AccountCreation"
            android:label="@string/title_activity_account_creation" >
        </activity>
        <activity
            android:name="com.example.app.AnimalAssociation"
            android:label="@string/title_activity_animal_association" >
        </activity>
        <activity
            android:name="com.example.app.AnimalWordAssociation"
            android:label="@string/title_activity_animal_word_association" >
        </activity>
        <activity
            android:name="com.example.app.ColorAssociation"
            android:label="@string/title_activity_color_association" >
        </activity>
        <activity
            android:name="com.example.app.GameList"
            android:label="@string/title_activity_game_list" >
        </activity>
        <activity
            android:name="com.example.app.GameResults"
            android:label="@string/title_activity_game_results" >
        </activity>
        <activity
            android:name="com.example.app.GamesActivity"
            android:label="@string/title_activity_games" >
        </activity>
        <activity
            android:name="com.example.app.HighScoresActivity"
            android:label="@string/title_activity_high_scores" >
        </activity>
        <activity
            android:name="com.example.app.LoginPage"
            android:label="@string/title_activity_login_page" >
        </activity>
        <activity
            android:name="com.example.app.Mathematics"
            android:label="@string/title_activity_mathematics" >
        </activity>
        <activity
            android:name="com.example.app.PictureWord"
            android:label="@string/title_activity_picture_word" >
        </activity>
        <activity
            android:name="com.example.app.MathGames"
            android:label="@string/title_activity_math_games" >
        </activity>
        <activity
            android:name="com.example.app.Logic"
            android:label="@string/title_activity_logic" >
        </activity>
    </application>

</manifest>
